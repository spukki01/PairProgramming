<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="se.chalmers.eda397.pairprogramming.UserStoryFragment"
    android:padding="4dp">

    <!-- Name -->
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/us_name"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_margin="2dp" />

    <!-- Type -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/us_name"
        android:id="@+id/us_type_label"
        android:text="@string/us_type"
        android:textStyle="bold"
        android:layout_margin="2dp"
        android:textSize="12sp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/us_type"
        android:textSize="12sp"
        android:layout_toRightOf="@+id/us_type_label"
        android:layout_below="@+id/us_name"
        android:layout_margin="2dp" />

    <!-- Created date -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/us_created_label"
        android:layout_below="@+id/us_type"
        android:text="@string/us_created_date"
        android:layout_margin="2dp"
        android:textStyle="bold"
        android:textSize="12sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/us_created"
        android:layout_below="@+id/us_type"
        android:layout_toRightOf="@+id/us_created_label"
        android:textSize="12sp"
        android:layout_margin="2dp" />

    <!-- Estimated -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/us_estimate_label"
        android:layout_below="@+id/us_created"
        android:text="@string/us_estimated"
        android:textSize="12sp"
        android:layout_margin="2dp"
        android:textStyle="bold" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/us_estimate"
        android:layout_below="@+id/us_created"
        android:layout_toRightOf="@+id/us_estimate_label"
        android:textSize="12sp" />

    <!-- Description -->
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/us_desc_label"
        android:layout_below="@+id/us_estimate"
        android:text="@string/us_desc"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_marginTop="8dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/us_description"
        android:layout_below="@+id/us_desc_label"
        android:textSize="12sp"
        android:layout_margin="2dp" />

</RelativeLayout>
