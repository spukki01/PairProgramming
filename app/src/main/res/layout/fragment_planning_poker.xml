<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:id="@+id/planning_poker_layout"
    tools:context="se.chalmers.eda397.pairprogramming.fragment.PlanningPokerFragment"
    android:layout_height="fill_parent">


    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true">

        <LinearLayout
            android:id="@+id/first_row"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">

            <Button
                android:id="@+id/first_row_first"
                android:onClick="onClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_weight="1"
                android:textSize="40dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/first_row_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1/2"
                android:layout_weight="1"
                android:textSize="40dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/first_row_third"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:layout_weight="1"
                android:textSize="40dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/second_row"
            android:layout_below="@+id/first_row"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/second_row_first"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="40dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/second_row_second"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="40dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/second_row_third"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textSize="40dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/third_row"
            android:layout_below="@+id/second_row"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/third_row_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:layout_weight="1"
                android:textSize="40dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/third_row_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13"
                android:layout_weight="1"
                android:textSize="40dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/third_row_third"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20"
                android:layout_weight="1"
                android:textSize="40dp"
                android:textStyle="bold" />
        </LinearLayout>



        <LinearLayout
            android:id="@+id/fourth_row"
            android:layout_below="@+id/third_row"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/fourth_row_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="40"
                android:layout_weight="1"
                android:textSize="40dp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/fourth_row_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="80"
                android:layout_weight="1"
                android:textSize="40dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/fourth_row_third"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:layout_weight="1"
                android:textSize="40dp"
                android:textStyle="bold" />
        </LinearLayout>



    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dunno"
        android:textSize="32dp"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coffee"
        android:textSize="32dp"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"/>

</RelativeLayout>
